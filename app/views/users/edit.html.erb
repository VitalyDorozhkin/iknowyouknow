
<h1 class="auto-margin"><%=@user.name %> Edit</h1>

<div class="auto-margin">
  <%= form_for @user, url: user_path(@user[:id]), method: :patch do |f| %>
    <h3>ADD NEW COURSE!</h3>
    <% if @user.errors.any? %>
      <%@user.errors.full_messages.each do |m| %>
        <div class="alert"><%=m%></div>
      <%end%>
    <%end %>
    <%=f.label :name%> <%=f.text_field :name%>
    <%=f.label :lastname%> <%=f.text_field :lastname%>
    <%=f.label :age%> <%=f.text_field :age%>
    <br>
    <%=f.label :email%> <%=f.text_field :email%>
    <%=f.label :phone%> <%=f.text_field :phone%>
    <%=f.label :login%> <%=f.text_field :login%>
    <%=f.label :password%> <%=f.text_field :password%>
    <br>
    <%=f.label :description%> <%=f.text_field :description%>

    <%= f.submit%>
  <%end %>
</div>
